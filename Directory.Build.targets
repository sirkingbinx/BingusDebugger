<?xml version="1.0" encoding="utf-8" ?>
<Project>
	<Target Name="CopyToPlugins" AfterTargets="Build" Condition="'$(CI)'!='TRUE'">
		<Copy SourceFiles="$(TargetPath)" DestinationFiles="$(CopyPath)\BepInEx\plugins\BingusDebugger\BingusDebugger.dll" />
		<Message Text="Copied DLL to Plugins" Importance="high"/>
	</Target>

	<Target Name="CopyPDBToPlugins" AfterTargets="Build" Condition="'$(CI)'!='TRUE'">
		<Copy SourceFiles="bin/Debug/$(TargetFramework)/BingusDebugger.pdb" DestinationFiles="$(CopyPath)\BepInEx\plugins\BingusDebugger\BingusDebugger.pdb" />
		<Message Text="Copied PDB to Plugins" Importance="high"/>
	</Target>
</Project>
